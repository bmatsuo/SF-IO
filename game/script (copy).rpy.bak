#screen clock
screen clock:
    timer 3600.0 repeat True action [SetVariable("min", 0), SetVariable("sec", 0),SetVariable("hour", int(hour) + 1)]
    timer 60.0 repeat True action [SetVariable("sec", 0),SetVariable("min", int(min) + 1)]
    timer 1.0 repeat True action [SetVariable("sec", int(sec) +1)]
    
    #$ runtime = renpy.get_game_runtime()
    
    text "[hour]:[min]:[sec]" size 16 at Position(xpos = 0.95, ypos= 0.05, xanchor = 1.0)





# The game starts here.
label start:
    show bgcolor behind lcable, lbulb, ssuit, text
    
    if inv_lcable == True:
        show lcable at pos1
    else:
        hide lcable   
    
    if inv_lbulb == True:
        show lbulb at pos2
    else:
        hide llbulb
        
    if inv_ssuit == True:
        show ssuit at pos3
    else:
        hide ssuit
    
    call intro
    
    #how text "HP [hp] \nXP [xp] \nLevel [level] \nCash [cash]" at topright

    
    menu:
        "start game":
            jump prisoncell
        "go to corridor":
            jump prisoncorridor
        "go to warehouse":
            jump warehouse
        "get all objects and doors open":
            $ inv_lcable = True
            $ inv_lbulb = True
            $ sta_prisondoor = True
            $ ssuit = True
            jump start
        "get 50 cash":
            $ cash += 50
            "your cash :  [cash]"
            jump start
            
        "go to stationshop":
            hide title
            $ spaceshippos = 10
            jump stationshop
            
        "get to dealer coodinates":
            $ toox = 280
            $ tooy = 120
            $spaceshippos = 6
            jump spaceship
            
        "go the the space ship":
            hide starsmall
            hide starmid
            hide starbig
            hide title
            with Dissolve(1.0)
            
            jump spaceship
            
        
        "exit":
            return
    



            

            
        
#SPACESHIP
label spaceship:
    hide text
    hide bg prisontlareapic
    hide planetxypic
    hide sunpic
    hide posanim
    hide lcable
    hide lbulb
    hide ssuit
    hide targetpos
    show screen clock
    
    #Directions
    if spaceshipdir == 1:
        show starssmall u2d behind ship
        show starsmid u2d behind ship
        show starsbig u2d behind ship
        
        if spaceshipnr == 1:
            show ship spaceship1u at truecenter
        if spaceshipnr == 2:
            show ship spaceship2u at truecenter
        if spaceshipnr == 3:
            show ship spaceship3u at truecenter

    
    if spaceshipdir == 2:
        show starssmall rl behind ship
        show starsmid rl behind ship
        show starsbig rl behind ship
        
        if spaceshipnr == 1:
            show ship spaceship1 at truecenter
        if spaceshipnr == 2:
            show ship spaceship2 at truecenter
        if spaceshipnr == 3:
            show ship spaceship3 at truecenter
 
            
    if spaceshipdir == 3:
        show starssmall d2u behind ship
        show starsmid d2u behind ship
        show starsbig d2u behind ship
        
        if spaceshipnr == 1:
            show ship spaceship1d at truecenter
        if spaceshipnr == 2:
            show ship spaceship2d at truecenter
        if spaceshipnr == 3:
            show ship spaceship3d at truecenter
    
    
    if spaceshipdir == 4:
        show starssmall lr behind ship
        show starsmid lr behind ship
        show starsbig lr behind ship
        
        if spaceshipnr == 1:
            show ship spaceship1l at truecenter
        if spaceshipnr == 2:
            show ship spaceship2l at truecenter
        if spaceshipnr == 3:
            show ship spaceship3l at truecenter
    
    
    
    if spaceshippos == 6:
        jump dealerview
    
    
    menu:
        "Cockpit":
            jump cockpit
        "Orbital View" if spaceshippos != 0:
            jump orbitview

        "Wares and Inventory":
            jump wares
        
        "Space Ship Cameras":
            menu:
                "Set to Top Camera":
                    $ spaceshipdir = 1
                    jump spaceship
                "Set to Bottom Camera":
                    $ spaceshipdir = 3
                    jump spaceship
                "Set to Left Camera":
                    $ spaceshipdir = 4
                    jump spaceship
                "Set to Right Camera":
                    $ spaceshipdir = 2
                    jump spaceship
            
        
        "Terminal":
            $ backto = "spaceship"
            $ term1 = "help"
            jump terminal

    
    jump spaceship
    




