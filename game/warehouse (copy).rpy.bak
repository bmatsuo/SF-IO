# WAREHOUSE
label warehouse:
    if spaceshippos == 1:
        show bg warehouse behind lcable, lbulb, ssuit, text
        
        $ s_rocks = 20
        $ s_steel = 50
        $ s_alu = 60
        $ s_textile = 40
        $ s_food = 30
    
    
    show text "{size=16}Cash = [cash] c \n ~ \n Rocks = [rocks] kg \n Steel = [steel] kg \n Alu = [alu] kg \n Textile = [textile] kg \n Food = [food] kg{/size}" at Position(xpos = 0.77, xanchor=0.0, ypos=150, yanchor=0.0)
    
    menu:
        "buy":
            jump warehousebuy
        "sell":
            jump warehousesell
        "go out":
            hide text
            if spaceshippos == 1:
                show posanim at Position(xpos = 80, ypos=260, xanchor=0.5, yanchor=0.5):
                jump prisonlift
            
            
            
            
label warehousebuy:
            show text "{size=16}Cash = [cash] c \n ~ \n Rocks = [rocks] kg \n Steel = [steel] kg \n Alu = [alu] kg \n Textile = [textile] kg \n Food = [food] kg{/size}" at Position(xpos = 0.77, xanchor=0.0, ypos=150, yanchor=0.0)
           
            menu:
                "buy rocks" if cash >= 20:
                    $ cash -= 20 
                    $ rocks += 10
                    jump warehousebuy
            
                "buy steel" if cash >= 50:
                    $ cash -= 50 
                    $ steel += 10
                    jump warehousebuy
        
                "buy alu" if cash >= 60:
                    $ cash -= 60 
                    $ alu += 10
                    jump warehousebuy
        
                "buy textile" if cash >= 40:
                    $ cash -= 40 
                    $ textile += 10
                    jump warehousebuy
        
                "buy food" if cash >= 30 :  
                    $ cash -= 30 
                    $ food += 10
                    jump warehousebuy
                    
                "back":
                    jump warehouse
                
label warehousesell:
            show text "{size=16}Cash = [cash] c \n ~ \n Rocks = [rocks] kg \n Steel = [steel] kg \n Alu = [alu] kg \n Textile = [textile] kg \n Food = [food] kg{/size}" at Position(xpos = 0.77, xanchor=0.0, ypos=150, yanchor=0.0)
   
            menu:
                "sell rocks" if rocks >= 10:
                    $ cash += 10 
                    $ rocks -= 10
                    jump warehousesell
            
                "sell steel" if steel >= 10:
                    $ cash += 40 
                    $ steel -= 10
                    jump warehousesell
        
                "sell alu" if alu >= 10:
                    $ cash += 50 
                    $ alu -= 10
                    jump warehousesell
        
                "sell textile" if textile >= 10:
                    $ cash += 30 
                    $ textile -= 10
                    jump warehousesell
        
                "sell food" if food >= 10 :  
                    $ cash += 20 
                    $ food -= 10
                    jump warehousesell

                "back":
                    jump warehouse
